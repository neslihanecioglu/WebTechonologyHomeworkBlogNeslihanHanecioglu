@model IEnumerable<WebTechnologyHomeworkBlog.Models.Article>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArticleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArticleGenre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArticleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArticleContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            Comment Content
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleGenre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @Html.ActionLink("Create Comment ", "Create", "Comments")
            
          

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
       
    </tr>
}

</table>

<div class="pagination">

    Page:
    @for (int p = 1; p <= ViewBag.TotalPages1; p++)
    {
        <a class="@(p==ViewBag.CurrentPage1 ? "current" : "")"
           href="@Url.Action("Index","Articles1",new{page=p})">@p</a>
    }


</div>
<style type="text/css">
    a {
        color: blue;
    }
</style>


